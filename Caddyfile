nyecountdown.live {
    # API and WebSocket to backend
    handle /api/* {
        reverse_proxy backend:8000
    }

    handle /health {
        reverse_proxy backend:8000
    }

    # WebSocket endpoint
    handle /ws {
        reverse_proxy backend:8000
    }

    # Everything else to frontend
    handle {
        reverse_proxy frontend:80
    }

    # Compression
    encode gzip

    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
    }
}

www.nyecountdown.live {
    redir https://nyecountdown.live{uri} permanent
}
